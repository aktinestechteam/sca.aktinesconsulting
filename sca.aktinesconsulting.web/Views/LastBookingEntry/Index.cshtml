@using System.Security.Claims
@using sca.aktinesconsulting.web.Common
@model sca.aktinesconsulting.web.Models.LastBookingEntryModel
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "v";
    ViewData["BreadcrumbHeader"] = "Booking Entry";
    ViewData["BreadcrumbPage"] = "Last Booking Entry Report";
}

<div class="row">
    <div class="loader"></div> <!-- Loader element -->
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-header portlet-header-bordered">
                <h3 class="portlet-title">Last Booking Entry Report </h3>
            </div>
            <div class="portlet-body">
                <div class="d-grid gap-3">
                    <form asp-controller="LastBookingEntry" asp-action="Upload" asp-antiforgery="false"
                          id="fmUpload" method="post"
                          enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-12">
                                <span id="errorMsg" style="display: none; color: #e63339"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="modal-body" style="padding:10px">
                                    <div style="display:flex">
                                        <div class="col-3">
                                            <div style="display: flex; margin: 10px">
                                                <span style="margin-top:5px">Year*</span>
                                                <select class="form-control" style="margin-left:10px" id="cmbYear">
                                                    <option value="0">Select</option>
                                                    @{
                                                        foreach (var year in Model.Version.Years)
                                                        {
                                                            <option value=@year.LastBookingVersionId>@year.Year</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div style="display: flex; margin: 10px">
                                                <span style="margin-top:5px">Month*</span>
                                                <select class="form-control" style="margin-left:10px" id="cmbMonth">
                                                    <option value="0">Select</option>
                                                    @{
                                                        foreach (var year in Model.Version.Months)
                                                        {
                                                            <option value=@year.LastBookingVersionId>@year.Month</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div style="display: flex; margin: 10px">
                                                <span style="margin-top:5px">Day*</span>
                                                <select class="form-control" style="margin-left: 10px; width: 100px;" id="cmbDay" >
                                                    <option value="0">Select</option>
                                                    @{
                                                        foreach (var year in Model.Version.Days)
                                                        {
                                                            <option value=@year.LastBookingVersionId>@year.Day</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="modal-body" style="padding:10px">
                                    <div style="display: flex; margin: 10px">
                                        <span style="margin-top:5px">Select File</span>
                                        <input class="form-control" type="file" id="formFile" accept=".xlsx" style="width: 500px; margin-left: 10px">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modal-footer">
                                <button id="btnDownload" type="button" class="btn btn-info mar" fdprocessedid="3hmaxr" style="margin-right:5px"><i class="fa fa-play-circle" style="margin-right:5px"></i>Download</button>
                                <button id="btnDuplicate" type="button" class="btn btn-info mar" fdprocessedid="3hmaxr" style="margin-right:5px"><i class="fa fa-play-circle" style="margin-right:5px"></i>Duplicate Entires</button>
                                <button id="btnUpload" type="button" class="btn btn-primary mar" fdprocessedid="3hmaxr" style="margin-right:5px"><i class="fa fa-play-circle" style="margin-right:5px"></i>Upload</button>
                            </div>
                        </div>
                    </form>
                </div>
                <hr />
                <div>
                    <h5>Duplicate Entries</h5>
                    <table id="dtBookingEntry" class="table table-bordered table-striped table-hover dataTable no-footer dtr-inline">
                        <thead>
                            <tr>
                                <td>Edit</td>
                                <td>FULL_AWB</td>
                                <td>BKG_LEG_STATUS</td>
                                <td>BOOKING_DATE</td>
                                <td>FLIGHT_DEP_DATE</td>
                                <td>BOOKING_TIME</td>
                                <td>FLIGHT_DEP_TIME</td>
                                <td>BKG_ORIGIN</td>
                                <td>BKG_DESTN</td>
                                <td>BKG_RATE_CLASS</td>
                                <td>AGENT_NAME</td>
                                <td>BKG_ROW_NUM</td>
                                <td>BKG_KEY</td>
                                <td>BKG_DEST_REGION</td>
                                <td>BKG_LAST_UPDATED_BY</td>
                                <td>BKG_LAST_UPDATED_GMT_DT</td>
                                <td>BKG_ORIGIN_COUNTRY</td>
                                <td>BKG_ORIGIN_EXT_SALES_AREA</td>
                                <td>BKG_ORI_REGION</td>
                                <td>BKG_REF</td>
                                <td>CHANNEL_CD</td>
                                <td>SPH_CODES</td>
                                <td>CHARGEABLE_WT</td>
                                <td>CURRENCY_CD</td>
                                <td>REV GBP</td>
                                <td>REV FOREIGN</td>
                                <td>YIELD GBP</td>
                                <td>YIELD FOREIGN</td>
                                <td>BKG_LEG_VOLUME</td>
                                <td>VOLUME</td>
                                <td>PRODUCT_CODE</td>
                                <td>PRODUCT_NAME</td>
                                <td>FLIGHT_NUMBER</td>
                                <td>FLIGHT_METAL</td>
                            </tr>
                        </thead>
                        <tbody></tbody>

                    </table>

                </div>
            </div>
        </div>

    </div>
</div>




@section Styles{
    <style>
        .buttons-colvis {
            margin: 5px;
        }

        .buttons-excel {
            margin: 5px;
        }

        .bg_color {
            background-color: blue !important;
        }
    </style>
    <style>
        
        /* Custom styles for the loader */
        .loader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            z-index: 9999;
            display: none;
        }

            /* Customize the loader appearance (e.g., use a spinner icon) */
            .loader::after {
                content: "";
                display: block;
                width: 40px;
                height: 40px;
                border-radius: 50%;
                border: 3px solid #fff;
                border-top: 3px solid #3498db;
                animation: spin 2s linear infinite;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
}
@section Scripts {

    <script src="~/app/last-booking-entry.js" asp-append-version="true"></script>


}